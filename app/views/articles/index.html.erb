<div class="container">
<h1 align="center">Listing all Articles</h1>
  <thead>
   <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th>Created</th>
        <th></th>
        <th></th>
      </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= truncate(article.description, length: 150) %></td>
        <td><%= article.user.name %></td>
        <td><%= time_ago_in_words(article.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
