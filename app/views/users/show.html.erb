<div class="container">
  <h1 id="page_title"><%= @user.name %>'s Articles</h1>
    <thead>
     <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Created</th>
        </tr>
    </thead>

    <tbody>
      <% @user.articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article) %></td>
          <td><%= truncate(article.description.html_safe, length: 100) %></td>
          <td><%= time_ago_in_words(article.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

